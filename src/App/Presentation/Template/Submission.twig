{% extends "Template.twig" %}
{% block body %}
    {% include "Component/NavBar.twig" %}
    <div class="p-4 mx-4 space-y-4 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="flex space-x-2 items-center">
            <h1 class="text-3xl font-extrabold leading-none tracking-tight text-gray-900 dark:text-white">
                提出 {{ submission.getId }}
            </h1>
            <button onclick="location.href='/submission/{{ submission.getId }}/download'"
                    type="submit"
                    class="text-gray-700 border border-blue-700 hover:bg-blue-700 hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:focus:ring-blue-800 dark:hover:bg-blue-500">
                <svg class="w-3 h-3"
                     aria-hidden="true"
                     xmlns="http://www.w3.org/2000/svg"
                     fill="none"
                     viewBox="0 0 16 18">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 1v11m0 0 4-4m-4 4L4 8m11 4v3a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-3" />
                </svg>
            </button>
            {% if user.getIsAdmin %}
                <button onclick="location.href='/submission/{{ submission.getId }}/delete'"
                        type="submit"
                        class="!ml-auto text-green-700 border border-green-700 hover:bg-green-800 hover:text-white focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center dark:border-green-500 dark:text-green-500 dark:hover:text-white dark:focus:ring-green-800 dark:hover:bg-green-500">
                    <svg class="w-3 h-3"
                         aria-hidden="true"
                         xmlns="http://www.w3.org/2000/svg"
                         fill="currentColor"
                         viewBox="0 0 18 20">
                        <path d="M17 4h-4V2a2 2 0 0 0-2-2H7a2 2 0 0 0-2 2v2H1a1 1 0 0 0 0 2h1v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V6h1a1 1 0 1 0 0-2ZM7 2h4v2H7V2Zm1 14a1 1 0 1 1-2 0V8a1 1 0 0 1 2 0v8Zm4 0a1 1 0 0 1-2 0V8a1 1 0 0 1 2 0v8Z" />
                    </svg>
                </button>
            {% endif %}
        </div>
        <hr class="h-px bg-gray-200 border-0 dark:bg-gray-700">
        {% if submission.getJudgeResult.value == "CE" or submission.getJudgeResult.value =="WJ" %}
            <p class="text-lg font-semibold text-left text-gray-900 bg-white dark:text-white dark:bg-gray-800">提出情報</p>
            <table class="p-2 w-full text-sm text-left text-gray-500 dark:text-gray-400 border">
                <tbody>
                    <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">提出日時</th>
                        <td class="px-6 py-4 text-center font-medium text-gray-900">{{ submission.getSubmittedAt|date("Y-m-d h:i:s") }}</td>
                    </tr>
                    <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">問題</th>
                        <td class="px-6 py-4 text-center font-medium text-gray-900">
                            <a href="/problem/{{ submission.getproblemId }}"
                               class="font-medium text-primary-600 hover:underline dark:text-primary-500">{{ problem.getTitle }}</a>
                        </td>
                    </tr>
                    <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">ユーザ</th>
                        <td class="px-6 py-4 text-center font-medium text-gray-900">
                            <a href="/user/{{ submission.userId }}/submissions"
                               class="font-medium text-primary-600 hover:underline dark:text-primary-500">{{ user.getUsername }}</a>
                        </td>
                    </tr>
                    <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">言語</th>
                        <td class="px-6 py-4 text-center font-medium text-gray-900">{{ submission.getLanguage.value }}</td>
                    </tr>
                    <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">コード長</th>
                        <td class="px-6 py-4 text-center font-medium text-gray-900">{{ submission.getCodeLength }} Byte</td>
                    </tr>
                    <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">結果</th>
                        <td class="px-6 py-4 text-center">
                            {% if submission.getJudgeResult.value == "WJ" %}
                                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-900 dark:text-gray-300">WJ</span>
                            {% elseif submission.getJudgeResult.value == "CE" %}
                                <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CE</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">実行時間</th>
                        <td class="px-6 py-4 text-center font-medium text-gray-900">{{ problem.getTimeConstraint }} ms</td>
                    </tr>
                    <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">メモリ</th>
                        <td class="px-6 py-4 text-center font-medium text-gray-900">{{ problem.getMemoryConstraint }} KB</td>
                    </tr>
                </tbody>
            </table>
        {% elseif submission.getJudgeResult.value == "MLE" or submission.getJudgeResult.value == "TLE" or submission.getJudgeResult.value == "RE" or submission.getJudgeResult.value == "WA" or submission.getJudgeResult.value == "AC" %}
            <p class="text-lg font-semibold text-left text-gray-900 bg-white dark:text-white dark:bg-gray-800">提出情報</p>
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="p-2 w-full text-sm text-left text-gray-500 dark:text-gray-400 border">
                    <tbody>
                        <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">提出日時</th>
                            <td class="px-6 py-4 text-center font-medium text-gray-900">{{ submission.getSubmittedAt|date("Y-m-d h:i:s") }}</td>
                        </tr>
                        <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">問題</th>
                            <td class="px-6 py-4 text-center font-medium text-gray-900">
                                <a href="/problem/{{ submission.getproblemId }}"
                                   class="font-medium text-primary-600 hover:underline dark:text-primary-500">{{ problem.getTitle }}</a>
                            </td>
                        </tr>
                        <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">ユーザ</th>
                            <td class="px-6 py-4 text-center font-medium  text-gray-900">
                                <a href="/user/{{ submission.userId }}/submissions"
                                   class="font-medium text-primary-600 hover:underline dark:text-primary-500">{{ user.getUsername }}</a>
                            </td>
                        </tr>
                        <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">言語</th>
                            <td class="px-6 py-4 text-center font-medium text-gray-900">{{ submission.getLanguage.value }}</td>
                        </tr>
                        <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">コード長</th>
                            <td class="px-6 py-4 text-center font-medium text-gray-900">{{ submission.getCodeLength }} Byte</td>
                        </tr>
                        <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">結果</th>
                            <td class="px-6 py-4 text-center">
                                {% if submission.getJudgeResult.value == "CE" %}
                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CE</span>
                                {% elseif submission.getJudgeResult.value == "TLE" %}
                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">TLE</span>
                                {% elseif submission.getJudgeResult.value == "MLE" %}
                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">MLE</span>
                                {% elseif submission.getJudgeResult.value == "RE" %}
                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">RE</span>
                                {% elseif submission.getJudgeResult.value == "WA" %}
                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">WA</span>
                                {% elseif submission.getJudgeResult.value == "WJ" %}
                                    <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-900 dark:text-gray-300">WJ</span>
                                {% elseif submission.getJudgeResult.value == "AC" %}
                                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">AC</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="text-xs bg-white dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">実行時間</th>
                            <td class="px-6 py-4 text-center font-medium text-gray-900">{{ problem.getTimeConstraint }} ms</td>
                        </tr>
                        <tr class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-700">
                            <th scope="row"
                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">メモリ</th>
                            <td class="px-6 py-4 text-center font-medium text-gray-900">{{ problem.getMemoryConstraint }} KB</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <p class="text-lg font-semibold text-left text-gray-900 bg-white dark:text-white dark:bg-gray-800">ジャッジ結果</p>
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="p-2 w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">ケース名</th>
                            <th scope="col" class="px-6 py-3">結果</th>
                            <th scope="col" class="px-6 py-3">実行時間</th>
                            <th scope="col" class="px-6 py-3">メモリ</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for testResult in submission.getTestResults %}
                            <tr class="bg-white dark:bg-gray-800 dark:border-gray-700">
                                <th scope="row"
                                    class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                    {{ (problem.getTestCases|filter(e => e.getId.equals(testResult.getTestCaseId))|first).getTitle }}
                                </th>
                                <td class="px-6 py-4 text-center">
                                    {% if submission.getJudgeResult.value == "TLE" %}
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">TLE</span>
                                    {% elseif submission.getJudgeResult.value == "CE" %}
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CE</span>
                                    {% elseif submission.getJudgeResult.value == "RE" %}
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">RE</span>
                                    {% elseif submission.getJudgeResult.value == "WA" %}
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">WA</span>
                                    {% elseif submission.getJudgeResult.value == "MLE" %}
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">MLE</span>
                                    {% elseif submission.getJudgeResult.value == "WJ" %}
                                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-900 dark:text-gray-300">WJ</span>
                                    {% elseif submission.getJudgeResult.value == "AC" %}
                                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">AC</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-center font-medium text-gray-900">{{ testResult.getExecutionTime }} ms</td>
                                <td class="px-6 py-4 text-center font-medium text-gray-900">{{ testResult.getConsumedMemory }} KB</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock body %}
